{% extends 'base.html.twig' %}

{% block title %}MyTickets! Witaj {{ user.firstName}}{% endblock %}

{% block body %}
 <div class="container">
     {% include 'default/_flash_messages.html.twig' %}
    <h1 class="text-center m-2">Witaj {{ user.firstName}}! </h1>

     <table class="table table-hover ">
         <thead>
         <tr class="table-warning">
             <th scope="col">{{ 'label.firstname'|trans }}</th>
             <th scope="col">{{ 'label.lastname'|trans }}</th>
             <th scope="col">{{ 'label.phone'|trans }}</th>
             <th scope="col">{{ 'label.email'|trans }}</th>
             <th scope="col">{{ 'label.actions'|trans }}</th>
         </tr>
         </thead>
         <tbody>
         <tr class="table-secondary">
             <td>{{ user.firstName}}</td>
             <td>{{ user.lastName}}</td>
             <td>{{ user.phone}}</td>
             <td>{{ user.email}}</td>
             <td><a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-outline-danger btn-sm m-2">{{ 'label.change_data'|trans }}</a>
                 <a href="{{ path('user_edit_pass', {'id': user.id}) }}" class="btn btn-outline-warning btn-sm m-2">{{ 'label.change_password'|trans }}</a>
                 <a href="{{ path('user_reservations') }}" class="btn btn-outline-success btn-sm m-2">{{ 'label.show_reservations'|trans }}</a>
             </td>
         </tr>
         </tbody>
     </table>




 </div>

{% endblock %}
